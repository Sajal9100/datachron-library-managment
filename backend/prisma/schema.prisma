generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id   Int @id @default(autoincrement())
    name String 
    email String @unique
    password String 
    role  Role @default(USER) 
    borrowed  Borrow[] 
    createdAt  DateTime @default(now())

}

model Book {
  id Int @unique @default(autoincrement())
  title String
  author String
  isbn String @unique
  isAvailable Boolean @default(true)
  borrowed Borrow[]
  createdAt  DateTime @default(now())
}
model Borrow {
  id Int @unique @default(autoincrement())
  user   User @relation(fields: [userId] , references: [id])    
  //just to define so field creation <fieldName> <RelatedModel> @relation(fields: [<thisTableField>], references: [<relatedTableField>])
  userId     Int
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     Int
  borrowedAt DateTime @default(now())
  returnedAt DateTime?
}

enum Role {
  ADMIN
  USER
}